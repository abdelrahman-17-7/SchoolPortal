@model SchoolPortal.ViewModels.RegisterViewModel

<h2>Register</h2>
<form asp-action="Register" method="post">
    <div><label asp-for="FullName"></label><input asp-for="FullName" /><span asp-validation-for="FullName"></span></div>
    <div><label asp-for="Email"></label><input asp-for="Email" /><span asp-validation-for="Email"></span></div>
    <div><label asp-for="Password"></label><input asp-for="Password" type="password" /><span asp-validation-for="Password"></span></div>
    <div><label asp-for="ConfirmPassword"></label><input asp-for="ConfirmPassword" type="password" /><span asp-validation-for="ConfirmPassword"></span></div>
    <div><label asp-for="Age"></label><input asp-for="Age" type="number" /><span asp-validation-for="Age"></span></div>
    <div><label asp-for="Grade"></label><input asp-for="Grade" /><span asp-validation-for="Grade"></span></div>
    <button type="submit">Register</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}