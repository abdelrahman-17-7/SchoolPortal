@model SchoolPortal.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-eye"></i> Student Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Age</dt>
                <dd class="col-sm-9">@Model.Age</dd>

                <dt class="col-sm-3">Grade</dt>
                <dd class="col-sm-9">@Model.Grade</dd>

                <dt class="col-sm-3">Serial Number</dt>
                <dd class="col-sm-9">@Model.SerialNumber</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
</div>
